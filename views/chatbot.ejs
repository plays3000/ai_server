<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI기반보고서생성기</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="css/chatbot.css">
    <link rel="stylesheet" href="css/responsive.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/inputbox.css">
    <link rel="stylesheet" href="css/login-signup.css">
    <link rel="stylesheet" href="css/orientation.css">
    <link rel="stylesheet" href="css/settings.css">
    <link rel="stylesheet" href="css/voicerecorder.css">
</head>
<body>
    <script>
        (function() {
            try {
                // 1. 테마 복구
                const savedTheme = localStorage.getItem('app_theme');
                if (savedTheme === 'dark') {
                    document.body.classList.add('dark');
                }

                // 2. 쓰기 모드 복구
                const savedMode = localStorage.getItem('app_writing_mode');
                if (savedMode) {
                    document.body.classList.add(savedMode);
                } else {
                    document.body.classList.add('horizontal-ltr'); // 기본값
                }
            } catch (e) {
                console.error('설정 복구 중 오류:', e);
            }
        })();
    </script>

    <%- include('components/header') %>

    <main class="main-layout-container">
        <div id="main-content">
            <%- include('components/chat-area') %>
        </div>
        <%- include('components/inputbox') %>
    </main>

    <!-- <%- include('components/footer') %> -->

    <%- include('setups/settings') %>

    <script type="module" src="js/chatbot.bundle.js"></script>
</body>
</html>