<link rel="stylesheet" href="/css/login-signup.css">

<div class="login-container">
    <h2>로그인</h2>
    <form><h2 data-i18n="title_login">로그인</h2>
    <form>
        <div class="input-section">
            <div class="form-group">
                <label for="id" data-i18n="lbl_id">아이디</label>
                <input type="text" id="id" class="form-input" data-i18n="placeholder_id" placeholder="아이디 입력">
            </div>
            <div class="form-group">
                <label for="password" data-i18n="lbl_password">비밀번호</label>
                <input type="password" id="password" class="form-input" data-i18n="placeholder_password" placeholder="비밀번호 입력">
            </div>
            
            <div class="utility-links">
                <a href="#" data-i18n="link_find_id">아이디 찾기</a>
                <span class="separator">|</span>
                <a href="#" data-i18n="link_find_pw">비밀번호 찾기</a>
            </div>

            <div class="btn-group main-actions">
                <button type="submit" class="btn btn-primary" data-i18n="btn_login_action">로그인</button>
                <button type="reset" class="btn" data-i18n="btn_reset">초기화</button>
                <button type="button" class="btn btn-signup" data-i18n="btn_go_signup">회원가입</button>
            </div>
        </div>

        <div class="divider">
            <span data-i18n="lbl_social_login">소셜 계정으로 로그인</span>
        </div>

        <div class="social-grid">
            <button class="btn-social btn-kakao"><i class="fas fa-comment"></i> 카카오</button>
            <button class="btn-social btn-naver"><i class="fa-solid fa-n"></i> 네이버</button>
            <button class="btn-social btn-nate"><i class="fa-solid fa-n"></i> 네이트</button>
            
            <button class="btn-social btn-line"><i class="fab fa-line"></i> LINE</button>
            <button class="btn-social btn-google"><i class="fab fa-google"></i> Google</button>
            <button class="btn-social btn-apple"><i class="fab fa-apple"></i> Apple</button>

            <button class="btn-social btn-facebook"><i class="fab fa-facebook-f"></i> Facebook</button>
            <button class="btn-social btn-instagram"><i class="fab fa-instagram"></i> Instagram</button>
            <button class="btn-social btn-twitter"><i class="fa-brands fa-x-twitter"></i> X (Twitter)</button>
            <button class.btn-social btn-tiktok"><i class="fab fa-tiktok"></i> TikTok</button>
            
            <button class="btn-social btn-microsoft"><i class="fab fa-microsoft"></i> Microsoft</button>
            <button class="btn-social btn-linkedin"><i class="fab fa-linkedin"></i> LinkedIn</button>
            <button class="btn-social btn-github"><i class="fab fa-github"></i> GitHub</button>
            <button class="btn-social btn-slack"><i class="fab fa-slack"></i> Slack</button>
            <button class="btn-social btn-discord"><i class="fab fa-discord"></i> Discord</button>
            <button class="btn-social btn-amazon"><i class="fab fa-amazon"></i> Amazon</button>

            <button class="btn-social btn-telegram"><i class="fab fa-telegram"></i> Telegram</button>
            <button class="btn-social btn-wechat"><i class="fab fa-weixin"></i> WeChat</button>
            <button class="btn-social btn-qq"><i class="fab fa-qq"></i> QQ</button>
            <button class="btn-social btn-weibo"><i class="fab fa-weibo"></i> Weibo</button>
            <button class="btn-social btn-yandex"><i class="fab fa-yandex"></i> Yandex</button>
            <button class="btn-social btn-vk"><i class="fab fa-vk"></i> VK</button>
        </div>
</div>
<script>
    document.querySelector('.btn-signup').addEventListener('click', function() {
        window.location.href = '/signup';
    });
</script>